auto wc = find_if(words.begin(),words.end(),

                [sz] (const string& a)

                     { return a.size() >= sz; });

auto wc = find_if(words.begin,words.end(),

                SizeCmp(sz));

                         

class SizeCmp {

public: 

    SizeCmp(size_t sz):sz_(sz) { }

    bool operator()(const string& a) {

        return a.size() >= sz_;

    }

    

private: 

    size_t sz_;

};
