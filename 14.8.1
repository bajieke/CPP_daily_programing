stable_sort(words.begin(),words.end(),

            [] (const string& a,const string& b) 

               { return a.size() < b.size(); });

            

stable_sort(words.begin(),words.end(),

            ShorterString());

class ShorterString {

public:

    bool operator()(const string& a,const string& b) {

        return a.size() < b.size();

    }

};      

