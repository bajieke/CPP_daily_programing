//—————————————————————6.5.1节练习—————————————
#include<iostream>
#include<string>
using std::cin;
using std::cout;
using std::endl;
using std::string;

string make_plural(size_t ctr,const string &word,const string &ending="s")
{
    return (ctr>1) ? word+ending :word;
}


int main()
{
    cout << "make_plural " << make_plural(2,"success") << endl;

    cout << "make_plural " << make_plural(1,"success") << endl;

    cout << "make_plural " << make_plural(2,"failure") << endl;

    cout << "make_plural " << make_plural(1,"success") << endl;

    cout << "make_plural " << make_plural(2,"success","后缀") << endl;

    
    return 0;
}
